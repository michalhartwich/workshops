-provide :title, category.name

.btn-group.form-group
  = back_button categories_path
  = edit_button edit_category_path(category), 'Edit category' if current_user.try(:admin?)
  = new_button '#', 'Add product', id: 'new-product' if user_signed_in?

-if category.products.any?
  %h3 Products
  = render 'products/listing', products: category.products
-else
  .clearfix
  %em No products in this category yet.

-if user_signed_in?
  #new-product-form.hide
    %h3 New product
    = render 'products/form'
