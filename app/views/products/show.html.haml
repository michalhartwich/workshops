-provide :title, product.title

.btn-group.form-group
  = create_button 'Back', category_products_path, icon: 'arrow-left'
  = create_button 'Edit', edit_category_product_path(category, product), icon: 'pencil' if product.user == current_user

%table.table.table-.details-table
  %thead
    %tr
      %th Attribute
      %th Value
    %tr
      %td Title:
      %td= product.title
    %tr
      %td Description:
      %td= product.description
    %tr
      %td Price:
      %td= product.price
    %tr
      %td Category:
      %td
        %strong= link_to product.category.name, product.category


%h3 Reviews
= render reviews
= render 'reviews/form'
